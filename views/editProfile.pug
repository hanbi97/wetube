extends layouts/main.pug

block content   
    .form-container
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar", accpet="image/*")
            input(type="text", placehlolder="Name", name="name", value=loggedUser.name)
            input(type="email", placehlolder="Email", name="email", value=loggedUser.email)
            input(type="submit", value="Update Profile")
        a.form-container__link(href=`/users${routes.changePassword}`)
            button Change Password 