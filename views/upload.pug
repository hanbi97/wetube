extends layouts/main.pug

block content   
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video File   
            input(type="file", id="file", name="file", required=true)
            input(type="text", placehlolder="Title", name="title", required=true)
            textarea(placehlolder="Description", name="description")
            input(type="submit", value="Upload Video")